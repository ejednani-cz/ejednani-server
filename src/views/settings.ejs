<!DOCTYPE HTML>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <% include partials/head %>
</head>

<body>
    <div id="header">
        <% include partials/header %>
    </div>

    <div id="container">
        <% include partials/menu %>
    
        <div class="rightCol">
            <div class="subpageBox">
                <div class="subpageContent settings">
                    <h1><%= settings.title %></h1>
                    <h2><%= settings.global %></h2>
                    <p>
                        <input type="checkbox" name="allowNotifications" disabled="disabled" />
                        <span><%= settings.allowNotifications %></span>
                    </p>

                    <h2><%= settings.insideRoom %></h2>
                    <p>
                        <input type="checkbox" name="useSpeaker" disabled="disabled" />
                        <span><%= settings.useSpeaker %></span>
                    </p>
                    
                    <p>
                        <input type="checkbox" name="useMicrophone" disabled="disabled" />
                        <span><%= settings.useMicrophone %></span>
                    </p>

                    <p>
                        <input type="checkbox" name="useCamera" disabled="disabled" />
                        <span><%= settings.useCamera %></span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $.switcher();
    </script>

    <div id="footer">
        <% include partials/footer %>
    </div>
</body>
</html>
